<h2>Sign in</h2>

<div class="modal-body">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),
  :html => {:class => "form-horizontal"}) do |f| %>
  <div class="control-group">
    <%= f.label :username, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :username, :html => {:placeholder => "Email"} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password, :html => {:placeholder => "Password", :type => "password"} %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="control-group">
    <div class="controls">
      <%= f.check_box :remember_me, :class => "checkbox" %>
      <%= f.label :remember_me , :type => "checkbox"%>
    </div>
  </div>
  <% end %>
  <div class="control-group">
	  <div class="controls">
	    <div><%= f.submit "Sign in", :type => "submit", :class => "btn" %></div>
	  </div>
  </div>
  <% end %>
  <div class="control-group pagination-centered">
    <div class="btn-group btn-group-vertical controls">
      <%= link_to "Login with Facebook", "/auth/facebook", :class => "btn btn-info" %>
      <%= link_to "Login with Dailymotion", "/auth/dailymotion", :class => "btn btn-info" %>
    </div>
  </div>
</div>
